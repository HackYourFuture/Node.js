  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Week 1 - Assignments",
      "program": "${workspaceFolder}/week1/assignments/src/index.js",
      "cwd": "${workspaceFolder}/week1/assignments"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Week 1 - Assignments Tests",
      "program": "${workspaceRoot}/week1/assignments/node_modules/ava/profile.js",
      "args": [
        "--concurrency=1",
        "--no-color",
        "--serial",
        "${workspaceRoot}/week1/assignments/test/server.test.js"
      ],
      "skipFiles": [
        "<node_internals>/**/*.js"
      ]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Week 1 - Lecture",
      "program": "${workspaceFolder}/week1/lecture/src/index.js",
      "cwd": "${workspaceFolder}/week1/lecture"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Week 2 - Lecture",
      "program": "${workspaceFolder}/week2/lecture/src/index.js",
      "cwd": "${workspaceFolder}/week2/lecture"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Week 3 - Lecture",
      "program": "${workspaceFolder}/week3/lecture/src/index.js",
      "cwd": "${workspaceFolder}/week3/lecture"
    }
  ]
}
